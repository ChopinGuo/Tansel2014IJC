coshx = (exp(x)+exp(-x))/2;
tanhx = (exp(x)-exp(-x))./(exp(x)+exp(-x));
sechx = 2./(exp(x)+exp(-x));
sechx2x = power(sechx.^2);

figure(1),plot(x,sinhx,'r-'),legend('双曲正弦函数sinh(x)');
